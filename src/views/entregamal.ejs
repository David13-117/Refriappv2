<body class="entregamal">
    <div class="contsalir">
        <a href="/entrega"><img src="/img/salida.png" class="iconsalir" alt="salir"></a>
    </div>
    <div class="contenedorentrega">
        <div class="statusentrega">
            <img src="/img/error.png" class="staentreicon" alt="check"></a>
            <h1 class="subtentrega">No Autorizado</h1>
            <h3 class="subtentrega">Juan Alberto Perez Garcia</h3>
            <h5 class="subtentrega">ID: 4370812</h5>
            <p class="subtentrega" id="fechahora"></p>
        </div>
    </div>
    <script>
        const fecha = new Date();

        const opciones = {
            year: 'numeric',
            month: 'long',
            day: 'numeric',
            hour: '2-digit',
            minute: '2-digit'
        };

        const fechaFormateada = fecha.toLocaleString('es-CO', opciones);

        document.getElementById("fechahora").innerText = fechaFormateada;
    </script>
